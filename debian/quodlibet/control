Architecture: all
Depends: ${python:Depends}, python-ctypes,
	python-gtk2 (>= 2.8), libgtk2.0-0 (>= 2.8.8-1), python-gst0.10,
	gstreamer0.10-plugins-good, gstreamer0.10-plugins-ugly,
